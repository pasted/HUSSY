= form_for(@result) do |f|
  - if @result.errors.any?
    #error_explanation
      %h2
        = pluralize(@result.errors.count, "error")
        prohibited this result from being saved:
      %ul
        - @result.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .actions
    = f.submit

= form_for(@drug) do |f|
  - if @drug.errors.any?
    #error_explanation
      %h2
        = pluralize(@drug.errors.count, "error")
        prohibited this drug from being saved:
      %ul
        - @drug.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .field
    = f.label :comment
    %br/
    = f.text_area :comment
  .actions
    = f.submit

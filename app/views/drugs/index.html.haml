%h1 Listing drugs
%table
  %tr
    %th Name
    %th Category
    %th Comment
    %td
    %td
    %td
  - @drugs.each do |drug|
    %tr
      %td= drug.name
      %td= drug.category
      %td= drug.comment
      %td= link_to 'Show', drug
      %td= link_to 'Edit', edit_drug_path(drug)
      %td= link_to 'Destroy', drug, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Drug', new_drug_path

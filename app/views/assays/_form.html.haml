= form_for(@assay) do |f|
  - if @assay.errors.any?
    #error_explanation
      %h2
        = pluralize(@assay.errors.count, "error")
        prohibited this assay from being saved:
      %ul
        - @assay.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :unit
    %br/
    = f.text_field :unit
  .field
    = f.label :description
    %br/
    = f.text_area :description  
  .actions
    = f.submit

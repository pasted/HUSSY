= form_for(@ethnicity) do |f|
  - if @ethnicity.errors.any?
    #error_explanation
      %h2
        = pluralize(@ethnicity.errors.count, "error")
        prohibited this ethnicity from being saved:
      %ul
        - @ethnicity.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :code
    %br/
    = f.text_field :code
  .field
    = f.label :group_code
    %br/
    = f.text_field :group_code
  .field
    = f.label :group_name
    %br/
    = f.text_field :group_name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .actions
    = f.submit

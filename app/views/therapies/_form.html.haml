= form_for(@therapy) do |f|
  - if @therapy.errors.any?
    #error_explanation
      %h2
        = pluralize(@therapy.errors.count, "error")
        prohibited this therapy from being saved:
      %ul
        - @therapy.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
